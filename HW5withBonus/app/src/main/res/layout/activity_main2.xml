<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3BD"
    tools:context=".MainActivity2">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:text="please answer the questions"
        android:textColor="#05668D"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="1000dp"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#00A896"
        android:hint="enter your name"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/Date"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:hint="enter your birthdate"
        android:layout_alignTop="@+id/name"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00A896"
        android:inputType="date" />


    <EditText
        android:id="@+id/job"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/Date"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00A896"
        android:textAlignment="center"
        android:hint="enter your job" />


    <EditText
        android:id="@+id/Phone"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:inputType="phone"
        android:backgroundTint="#00A896"
        android:hint="enter your phone number"
        android:textAlignment="center"
        android:layout_alignTop="@+id/job"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:backgroundTint="#00A896"
        android:hint="enter your e-mail"
        android:textAlignment="center"
        android:layout_alignTop="@+id/Phone"
        android:layout_marginTop="60dp"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/reset"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="reset"
        android:layout_alignTop="@+id/email"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#5702C39A"
        android:layout_marginTop="90dp"/>
    <Button
        android:id="@+id/view"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="view your cv"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#5702C39A"
        android:layout_alignTop="@+id/reset"
        android:layout_marginTop="90dp"/>


</RelativeLayout>